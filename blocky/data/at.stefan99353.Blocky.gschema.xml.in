<?xml version="1.0" encoding="utf-8"?>
<schemalist>
  <schema path="/at/stefan99353/Blocky/" id="@app-id@" gettext-domain="@gettext-package@">
    <!-- Launcher Page -->
    <key name="instances-dir" type="s">
      <default>"NULL"</default>
      <summary>Default folder for new instances</summary>
    </key>
    <key name="libraries-dir" type="s">
      <default>"NULL"</default>
      <summary>Default folder for Minecraft libraries</summary>
    </key>
    <key name="assets-dir" type="s">
      <default>"NULL"</default>
      <summary>Default folder for Minecraft assets</summary>
    </key>

    <!-- Minecraft Page -->
    <key name="use-fullscreen" type="b">
      <default>false</default>
      <summary>Start Minecraft in Fullscreen (F11)</summary>
    </key>
    <key name="enable-window-size" type="b">
      <default>false</default>
      <summary>Launches Minecraft with a custom resolution</summary>
    </key>
    <key name="game-window-width" type="i">
      <default>1280</default>
      <summary>Game window width for instances</summary>
    </key>
    <key name="game-window-height" type="i">
      <default>720</default>
      <summary>Game window height for instances</summary>
    </key>
    <key name="enable-memory" type="b">
      <default>true</default>
      <summary>Launches Minecraft with custom memory allocation</summary>
    </key>
    <key name="min-memory" type="i">
      <default>1024</default>
      <summary>Minimum memory allocated to the gam</summary>
    </key>
    <key name="max-memory" type="i">
      <default>2048</default>
      <summary>Maximum memory allocated to the gam</summary>
    </key>
    <key name="java-exec" type="s">
      <default>"java"</default>
      <summary>Java executable used to run the game</summary>
    </key>
    <key name="enable-jvm-args" type="b">
      <default>false</default>
      <summary>Use these JVM Arguments to run the game</summary>
    </key>
    <key name="jvm-args" type="s">
      <default>""</default>
      <summary>JVM Arguments</summary>
    </key>

    <!-- State -->
    <key name="default-profile" type="s">
      <default>""</default>
      <summary>Default profile</summary>
    </key>
    <key name="window-width" type="i">
      <default>640</default>
      <summary>Window width</summary>
    </key>
    <key name="window-height" type="i">
      <default>360</default>
      <summary>Window height</summary>
    </key>
    <key name="is-maximized" type="b">
      <default>false</default>
      <summary>Window maximized state</summary>
    </key>

    <!-- Storage -->
    <key name="profiles-file-path" type="s">
      <default>"NULL"</default>
      <summary>Default file for profile storage</summary>
    </key>
    <key name="instances-file-path" type="s">
      <default>"NULL"</default>
      <summary>Default file for instance storage</summary>
    </key>
  </schema>
</schemalist>
