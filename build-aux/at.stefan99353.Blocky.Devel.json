{
    "app-id" : "at.stefan99353.Blocky.Devel",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "42",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command" : "blocky",
    "finish-args" : [
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--env=RUST_LOG=blocky=debug,libblocky=debug",
        "--env=G_MESSAGES_DEBUG=none",
        "--env=RUST_BACKTRACE=1",
        "--share=network"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin",
        "build-args" : [
            "--share=network"
        ],
        "test-args" : [
            "--socket=x11",
            "--share=network"
        ],
        "env" : {
            "RUST_LOG" : "blocky=debug,libblocky=debug"
        }
    },
    "modules" : [
        {
            "name" : "blocky",
            "buildsystem" : "meson",
            "run-tests" : true,
            "config-opts" : [
                "-Dprofile=development"
            ],
            "sources" : [
                {
                    "type" : "dir",
                    "path" : "../"
                }
            ]
        }
    ]
}
